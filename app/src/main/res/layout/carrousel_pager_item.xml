<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_pager_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:scaleType="fitXY" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/carrousel_title"
        style="@style/SplashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/carrousel_title_text_top" />

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="@dimen/carrousel_center_image_width"
        android:layout_height="@dimen/carrousel_center_image_height"
        android:layout_below="@id/carrousel_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/carrousel_img_center_top" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/carrousel_desc"
        style="@style/SplashTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/carrousel_desc_text_margin_left"
        android:layout_marginRight="@dimen/carrousel_desc_text_margin_right"
        android:layout_marginTop="@dimen/carrousel_desc_margin_top"
        android:gravity="center"
        android:textColor="@color/white" />

</RelativeLayout>