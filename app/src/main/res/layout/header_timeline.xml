<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/timeline_header_maring_top"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/header_timeline_paddingLeft">

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/txtHeaderSection"
        style="@style/SeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/txtHeaderMinuten"
        style="@style/FooterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right" />

</LinearLayout>