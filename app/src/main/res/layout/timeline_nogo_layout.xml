<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/timeline_group_margin_top"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_user_icon"
        android:layout_width="@dimen/timeline_user_icon_width"
        android:layout_height="@dimen/timeline_user_icon_height"
        android:contentDescription="@string/empty_description" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/txtNoGoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/timeline_graph_container_margin_left"
        android:layout_toRightOf="@id/img_user_icon" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/txtNogoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>