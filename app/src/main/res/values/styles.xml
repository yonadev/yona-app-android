<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welkom_screen</item>
    </style>

    <style name="YonaCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/primary_text_dark_nodisable</item>
    </style>

    <style name="FragmentStyle">
        <item name="android:background">@color/bg_gradient_three</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="SeScoreNeg">
        <item name="android:textSize">32sp</item>
        <item name="android:typeface">@integer/oswald_light</item>
        <item name="android:textColor">@color/darkish_pink</item>
    </style>

    <style name="SeScorePos">
        <item name="android:textSize">32sp</item>
        <item name="textStyle">@integer/oswald_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashTitle">
        <item name="android:textSize">32sp</item>
        <item name="textStyle">@integer/roboto_light</item>
    </style>

    <style name="SplashTxt">
        <item name="android:textSize">22sp</item>
        <item name="textStyle">@integer/roboto_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChallengeTitle">
        <item name="android:textSize">16sp</item>
        <item name="textStyle">@integer/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentSeTitle">
        <item name="android:textSize">15sp</item>
        <item name="textStyle">@integer/roboto_bold</item>
    </style>

    <style name="SeTitle" parent="ParentSeTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="parentNavTitle">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_bold</item>
    </style>

    <style name="NavTitle" parent="@style/parentNavTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavTitleFiftyOpacity" parent="@style/parentNavTitle">
        <item name="android:textColor">@color/white_fifty_opacity</item>
    </style>

    <style name="parentBtnTxtLg">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
    </style>

    <style name="BtnTxtLg">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnTxtLgSpacing" parent="parentBtnTxtLg">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnTxtMedium">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="parentChallengeTxt">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChallengeTxt" parent="@style/parentChallengeTxt">
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="InputTxt">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubscribeTxt">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnTxtBlue">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/mid_blue</item>
    </style>

    <style name="parentFooterTxt">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
    </style>

    <style name="FooterTxt" parent="parentFooterTxt">
        <item name="android:textColor">@color/black_sixty_opacity</item>
    </style>


    <style name="FooterTxtFortyOpactiy" parent="parentFooterTxt">
        <item name="android:textColor">@color/black_forty_opacity</item>
    </style>

    <style name="TabTitleLg">
        <item name="android:textSize">13sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white_fifty_opacity</item>
    </style>

    <style name="BdgTxt">
        <item name="android:textSize">12sp</item>
        <item name="textStyle">@integer/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnTxtSmall">
        <item name="android:textSize">12sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FooterTitle">
        <item name="android:textSize">12sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Explanation">
        <item name="android:textSize">12sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/black_eighty_opacity</item>
    </style>

    <style name="parentDate">
        <item name="android:textSize">11sp</item>
        <item name="textStyle">@integer/roboto_bold</item>
    </style>

    <style name="Date" parent="parentDate">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DateSixtyOpacity" parent="parentDate">
        <item name="android:textColor">@color/black_sixty_opacity</item>
    </style>

    <style name="TabTitle">
        <item name="android:textSize">11sp</item>
        <item name="textStyle">@integer/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GraphLabel">
        <item name="android:textSize">11sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputLabel">
        <item name="android:textSize">11sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DateWeek">
        <item name="android:textSize">11sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="hintText" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/mid_blue_fifty_opacity</item>
    </style>

    <style name="passcode_editText">
        <item name="android:layout_width">@dimen/passcode_editText_width</item>
        <item name="android:layout_height">@dimen/passcode_editText_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/five</item>
        <item name="android:background">@drawable/passcode_edit_bg_grape</item>
        <item name="android:layout_marginLeft">@dimen/passcode_margin_left</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">1</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>
