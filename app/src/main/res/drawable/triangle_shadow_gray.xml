<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white_three" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="-13"
            android:pivotX="-10%"
            android:pivotY="120%"
            android:toDegrees="20">
            <shape>
                <size
                    android:width="30dp"
                    android:height="45dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/white_one" />
                <solid android:color="@color/white_one" />
            </shape>
        </rotate>
    </item>
</layer-list>